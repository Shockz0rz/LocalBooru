<Window x:Name="LocalBooru_Search" x:Class="LocalBooru.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LocalBooru Search" Height="720" Width="1024  ">
    <Grid>
        <TextBlock x:Name="TitleBlock" HorizontalAlignment="Center" Margin="10,10,10,0" TextWrapping="Wrap" Text="LocalBooru" VerticalAlignment="Top" TextAlignment="Center" Foreground="#FF00ADEF" Height="77" Width="497" FontWeight="Bold" FontSize="64"/>
        <TextBox x:Name="searchBox" HorizontalAlignment="Left" Height="20" Margin="150,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="636" Foreground="#7F000000" Text="Enter search tags, separated by commas." FontStyle="Italic" GotFocus="EraseDefaultText" />
        <Button x:Name="searchButton" Content="Go" Margin="791,120,150,0" VerticalAlignment="Top" Click="InitiateSearch" />
        <Button x:Name="settingsButton" HorizontalAlignment="Left" Margin="974,10,0,0" VerticalAlignment="Top" Width="32" Height="32" RenderTransformOrigin="-0.233,1.2" Background="#00000000" BorderBrush="#7F707070"/>
        <ScrollViewer HorizontalAlignment="Left" Height="533" Margin="10,146,0,0" VerticalAlignment="Top" Width="996"/>
        <Image x:Name="settingsIcon" Height="30" VerticalAlignment="Top" Stretch="Fill" Source="Assets/gearicon.png" Opacity="0.25" Margin="976,10,10,0"/>

    </Grid>
</Window>
